---
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionHeader from '../components/SectionHeader.astro';

const gallery = [
  {
    title: 'Βόρεια Ακρώρεια Ivory Peak',
    subtitle: 'Ορειβασία · 2024',
    image: 'https://images.unsplash.com/photo-1500534314209-a25ddb2bd429?auto=format&fit=crop&w=900&q=80'
  },
  {
    title: 'Αυγή σε παγετώνα',
    subtitle: 'Περιοδεία σκι · 2025',
    image: 'https://images.unsplash.com/photo-1441974231531-c6227db76b6e?auto=format&fit=crop&w=900&q=80'
  },
  {
    title: 'Νεανική προπόνηση σε κρεβάς',
    subtitle: 'Καθοδήγηση · 2023',
    image: 'https://images.unsplash.com/photo-1490481651871-ab68de25d43d?auto=format&fit=crop&w=900&q=80'
  },
  {
    title: 'Φως bivouac στην κορυφή',
    subtitle: 'Αλπική ανάβαση · 2022',
    image: 'https://images.unsplash.com/photo-1482192597420-4817fdd7e8b0?auto=format&fit=crop&w=900&q=80'
  },
  {
    title: 'Σκόνη στο Heliotrope',
    subtitle: 'Σκι ορειβασίας · 2024',
    image: 'https://images.unsplash.com/photo-1454496522488-7a8e488e8606?auto=format&fit=crop&w=900&q=80'
  },
  {
    title: 'Προπόνηση ομάδας ράχης',
    subtitle: 'Σεμινάριο αναρρίχησης · 2023',
    image: 'https://images.unsplash.com/photo-1477414348463-c0eb7f1359b6?auto=format&fit=crop&w=900&q=80'
  }
];
---
<BaseLayout title="Γκαλερί" description="Εικόνες από πρόσφατες ορειβατικές, σκι και mentoring δράσεις.">
  <section class="section-padding">
    <SectionHeader eyebrow="Οπτικό" title="Γκαλερί" subtitle="Πέρασε τον δείκτη για λεζάντες και έμπνευση νέων γραμμών" />
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {gallery.map((item) => (
        <figure class="group relative h-64 overflow-hidden rounded-2xl">
          <img src={item.image} alt={item.title} class="h-full w-full object-cover transition duration-500 group-hover:scale-105" loading="lazy" />
          <figcaption class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/10 to-transparent opacity-0 group-hover:opacity-100 transition flex flex-col justify-end p-4">
            <p class="text-white font-semibold">{item.title}</p>
            <p class="text-sm text-brand-sand">{item.subtitle}</p>
          </figcaption>
        </figure>
      ))}
    </div>
    <p class="mt-8 text-center text-brand-fog text-sm">Μελλοντική βελτίωση: σύνδεση με Instagram ή κοινόχρηστα άλμπουμ.</p>
  </section>
</BaseLayout>
