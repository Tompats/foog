---
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionHeader from '../components/SectionHeader.astro';
import CoachCard from '../components/CoachCard.astro';
import { coaches } from '../data/coaches';
---
<BaseLayout title="Προπονητές" description="Γνώρισε τους πιστοποιημένους προπονητές σκι, ορειβασίας και αναρρίχησης του Φ.Ο.Ο.Γ.">
  <section class="section-padding">
    <SectionHeader eyebrow="Ομάδα" title="Προπονητές & εκπαιδευτές" subtitle="Επαγγελματίες χιονοστιβάδων, διεθνείς οδηγοί και εθελοντές μέντορες" />
    <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-3">
      {coaches.map((coach) => (
        <CoachCard coach={coach} />
      ))}
    </div>
  </section>
</BaseLayout>
