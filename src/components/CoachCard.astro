---
import type { Coach } from "../types";

interface Props {
  coach: Coach;
}

const { coach } = Astro.props;
const avatarWrapperClasses =
  "mx-auto h-28 w-28 rounded-[30px] ring-4 ring-brand-river/40 overflow-hidden flex items-center justify-center bg-brand-cloud text-brand-river";
---

<div
  class="glass-panel p-6 flex flex-col gap-4 text-center transition duration-300 hover:-translate-y-1 hover:shadow-glow hover:border-brand-pine/40 bg-gradient-to-b from-brand-river/5 to-brand-cloud"
>
  <div class={avatarWrapperClasses}>
    {
      coach.photoUrl ? (
        <img
          src={coach.photoUrl}
          alt={coach.name}
          class="h-full w-full object-cover"
          loading="lazy"
        />
      ) : (
        <>
          <i class="fa-solid fa-user text-4xl" aria-hidden="true" />
          <span class="sr-only">Φωτογραφία προπονητή δεν είναι διαθέσιμη</span>
        </>
      )
    }
  </div>
  <div>
    <p class="text-xs uppercase tracking-[0.4em] text-brand-mossDark">
      {coach.role}
    </p>
    <h3 class="text-2xl font-semibold text-brand-rocky heading-font">
      {coach.name}
    </h3>
  </div>
  <p class="text-brand-mist text-sm leading-relaxed">{coach.bio}</p>
  <div class="flex flex-wrap justify-center gap-2">
    {
      coach.certifications
        ? coach.certifications.map((cert) => (
            <span class="text-xs px-3 py-1 rounded-full border border-brand-river/30 text-brand-rocky bg-brand-cloud shadow-sm">
              {cert}
            </span>
          ))
        : ""
    }
  </div>
  <div class="flex flex-wrap justify-center gap-2">
    {
      coach.specialties.map((spec) => (
        <span class="text-xs uppercase tracking-[0.2em] text-brand-pine border border-brand-pine/30 rounded-full px-3 py-1 bg-brand-moss/20">
          {spec}
        </span>
      ))
    }
  </div>
</div>
