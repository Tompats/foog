---
import type { BoardMember } from '../types';

interface Props {
  member: BoardMember;
}

const { member } = Astro.props;
---
<div class="glass-panel p-6 flex items-center gap-6 transition duration-300 hover:-translate-y-1 hover:border-brand-pine/30 bg-brand-cloud">
  <img src={member.photoUrl} alt={member.name} class="h-20 w-20 rounded-[24px] object-cover ring-4 ring-brand-river/40" loading="lazy" />
  <div>
    <p class="text-xs uppercase tracking-[0.4em] text-brand-moss">{member.role}</p>
    <h3 class="text-xl font-semibold text-brand-rocky heading-font">{member.name}</h3>
    <p class="text-brand-mist text-sm mt-2">{member.bio}</p>
  </div>
</div>
