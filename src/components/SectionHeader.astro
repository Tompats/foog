---
interface Props {
  title: string;
  eyebrow?: string;
  subtitle?: string;
}

const { title, eyebrow, subtitle } = Astro.props;
---
<div class="text-center max-w-3xl mx-auto mb-10">
  {eyebrow && (
    <p class="text-sm uppercase tracking-[0.3em] text-brand-pine mb-3">{eyebrow}</p>
  )}
  <h2 class="text-3xl sm:text-4xl font-semibold text-brand-rocky">{title}</h2>
  {subtitle && <p class="mt-4 text-brand-mist text-lg">{subtitle}</p>}
  <div class="mt-6 h-1 w-20 mx-auto bg-gradient-to-r from-brand-moss to-brand-terracotta rounded-full" aria-hidden="true"></div>
</div>
